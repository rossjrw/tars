{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["svelte3"],
  "rules": {
    "no-unused-vars": [
      "warn", { "argsIgnorePattern": "^_" }
    ],
    "prefer-template": "error",
    "quotes": ["warn", "double"],
    "comma-dangle": ["error", "always-multiline"]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ]
}
